<div class="field <?= $block->isRequired() ? 'required' : '' ?>">
    <label class="label" for="<?= $block->getId() ?>"><?= $block->getLabel() ?></label>
    <div class="control">
        <?php foreach ($block->getOptions() as $optionId => $optionLabel): ?>
